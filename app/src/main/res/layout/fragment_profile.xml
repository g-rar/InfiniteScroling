<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textView_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/str_userName"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_name_profile"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_edit_black_24dp"
                android:text="@string/str_editProfile"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView_Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_editProfile"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/str_information"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listView_information_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Information"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>

            <Button
                android:id="@+id/button_anotherSeeFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listView_information_profile"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="-45dp"
                android:layout_toStartOf="@+id/imageView_profile"
                android:drawableLeft="@drawable/ic_people_black_24dp"
                android:text="@string/str_seeFriends"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_anotherSeePhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listView_information_profile"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-45dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/imageView_profile"
                android:drawableLeft="@drawable/ic_image_black_24dp"
                android:text="@string/str_seePhotos"
                android:textAllCaps="false" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerView_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_anotherSeePhotos"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp" />

            <Button
                android:id="@+id/button_updateProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_name_profile"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/button_editProfile"
                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                android:text="@string/str_updateProfilePicture"
                android:textAllCaps="false" />
        </RelativeLayout>

    </ScrollView>
</FrameLayout>